<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/morado_75">

    <ImageView
        android:id="@+id/ivItemImagen"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        app:srcCompat="@drawable/juego"
        android:contentDescription="TODO" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvItemIdentificador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Identificador"
            android:textColorHint="#212121"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvItemPlataforma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Plataforma"
            android:textColorHint="#212121"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvItemNombreJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:textColorHint="#212121"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvItemGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="GÃ©nero"
            android:textColorHint="#212121"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvItemPrecioVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio venta"
            android:textColorHint="#212121"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>