<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@color/morado_75">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/ivItemImagen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/juego" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvItemPlataforma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/morado_25"
            android:hint="Plataforma"
            android:padding="4dp"
            android:singleLine="true"
            android:textColorHint="#212121"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvItemNombreJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/morado_25"
            android:hint="Nombre"
            android:padding="4dp"
            android:singleLine="true"
            android:textColorHint="#212121"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvItemGenero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/morado_25"
            android:hint="GÃ©nero"
            android:padding="4dp"
            android:singleLine="true"
            android:textColorHint="#212121"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvItemPrecioVenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/morado_25"
            android:hint="Precio venta"
            android:padding="4dp"
            android:singleLine="true"
            android:textColorHint="#212121"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>